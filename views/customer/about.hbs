{{#>client}}

  <div class="slide-one-item home-slider owl-carousel">
    <div class="site-blocks-cover inner-page-cover" style="background-image: url(images/hero_bg_2.jpg);" data-aos="fade"
         data-stellar-background-ratio="0.5">
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">
          <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
            <h2 class="text-white font-weight-light mb-2 display-1">Service Providers</h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="site-section bg-light">
    <div class="container">
      <div class="row justify-content-center mb-5">
        <div class="col-md-7">
          <h2 class="site-section-heading font-weight-light text-black text-center">Our Professionals</h2>
        </div>
      </div>
      <div class="row">
        {{#each viewData.staffs}}
          <div class="col-md-6 col-lg-4 text-center mb-5" data-aos="fade-up">
            <div class="d-flex flex-column align-items-center">
              {{#if image}}
                <img src="/uploads/{{image}}" alt="Image" class="img-fluid w-50 rounded-circle mb-4">
              {{else}}
                <img src="/images/person_1.jpg" alt="Default Image" class="img-fluid w-50 rounded-circle mb-4">
              {{/if}}
              <h2 class="text-black font-weight-light mb-4">{{firstName}} {{lastName}}</h2>
              <p class="mb-4">{{bio}}</p>
              <p>
                <a href="#" class="pl-0 pr-3"><span class="icon-twitter"></span></a>
                <a href="#" class="pl-3 pr-3"><span class="icon-instagram"></span></a>
                <a href="#" class="pl-3 pr-3"><span class="icon-facebook"></span></a>
              </p>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="site-section">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 mb-5">
          <img src="images/person_1.jpg" alt="Image" class="img-md-fluid">
        </div>
        <div class="col-lg-6 bg-white p-md-5 align-self-center">
          <h2 class="display-1 text-black line-height-1 site-section-heading mb-4 pb-3">Explore our latest hairstyles to elevate your look with modern trends. The Chic Pixie Cut blends sophistication with playfulness, the Boho Waves exude carefree charm, while the Sleek High Ponytail offers a polished and versatile appearance. The Textured Bob revitalizes with dynamic layers, the Braided Crown Updo adds a touch of enchantment, and the Modern Shag presents a contemporary, laid-back chic. Each style is designed to ensure a seamless blend of elegance and individuality, empowering you to express your unique personality effortlessly.&rdquo;</em></p>
          <!--<p class="lead text-black">&mdash; <em>Stellla Martin</em></p>-->
        </div>
      </div>
    </div>
  </div>

  <div class="site-section border-top">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-12">
          <!--<h2 class="mb-4 text-black">We want your hair to look fabulous</h2>-->
          <p class="mb-0"><a href="#" class="btn btn-primary py-3 px-5 text-white">Visit Our Salon Now</a></p>
        </div>
      </div>
    </div>
  </div>
{{/client}}
