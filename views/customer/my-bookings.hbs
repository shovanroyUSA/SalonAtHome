{{#>client}}

  <div class="container mx-auto mt-10 p-5">
    <div class="flex flex-col items-center gap-5 sm:items-start sm:flex-row">
      <!-- Profile Sidebar -->
      <div class="flex flex-col md:w-1/4 gap-2 w-full">
        <div class="w-full p-4 bg-gray-100 border">
          <div class="flex flex-col items-center">
            <img
              src="https://via.placeholder.com/150"
              alt="profile image"
              class="rounded-full mb-4 w-[100px]"
            />
            <span class="text-gray-700 mb-4 italic">ahmedishfaq737</span>
          </div>
        </div>
        <div class="w-full p-4 bg-gray-100 border">
          <div class="text-sm flex flex-col italic">
            <a
              href="#"
              class="block font-medium text-gray-600 italic font-thin text-sm hover:text-[#EBBA4D]"
            >My Bookings</a
            >
            <a
              href="#"
              class="block font-medium text-gray-600 italic font-thin text-sm hover:text-[#EBBA4D] mt-2"
            >My Account</a
            >
          </div>
        </div>
      </div>

      <!-- Account Form -->
      <div class="flex flex-col gap-5">
        <div class="flex-1 p-4 bg-gray-100 border">
          <div
            class="flex flex-col sm:flex-row sm:justify-between items-start"
          >
            <div class="flex flex-col gap-0">
              <h2 class="text-4xl font-[700] mb-1">
                MY <br />
                ACCOUNT
              </h2>
              <p
                class="mb-4 font-medium text-gray-600 italic font-thin text-xs"
              >
                View and edit your personal info below.
              </p>
            </div>
          </div>

          <div class="border-b py-4 mb-4">
            <h3 class="text-xl font-bold mb-2 italic">Account</h3>
            <p
              class="mb-4 font-medium text-gray-600 italic font-thin text-xs"
            >
              Update your personal information.
            </p>
            <div class="flex flex-col">
              <label for="displayName" class="italic text-xs"
              >Login Email
              </label>
              <span class="italic text-[10px]">
                  ahmedishfaq737@gmail.com
                </span>
            </div>
            <div class="flex gap-5 sm:gap-20 mt-2">
              <div class="mb-4">
                <label for="firstName" class="italic text-xs"
                >First Name *</label
                >
                <input
                  type="text"
                  id="firstName"
                  class="mt-1 block w-full border-gray-300 p-2 pl-2 text-xs border bg-white"
                  value="ahmedishfaq737"
                />
              </div>
              <div class="mb-4">
                <label for="lastName" class="italic text-xs">Last Name</label>
                <input
                  type="text"
                  id="lastName"
                  class="mt-1 block w-full border-gray-300 p-2 pl-2 text-xs border bg-white"
                  value="ahmedishfaq737"
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Bookings section -->
        <div class="flex-1 p-4 bg-gray-100 border">
          <div
            class="flex flex-col sm:flex-row sm:justify-between items-start"
          >
            <div class="flex flex-col gap-0">
              <h2 class="text-4xl uppercase font-[700] mb-1">
                Your <br />
                bookings
              </h2>
              <p
                class="mb-4 font-medium text-gray-600 italic font-thin text-xs"
              >
                View, reschedule or cancel your bookings and easily book
                again.
              </p>
            </div>
          </div>
          <ul
            class="grid relative max-w-full min-h-screen w-full grid-cols-3 gap-x-5 p-10"
          >
            <li class="">
              <input
                class="peer sr-only"
                type="radio"
                value="yes"
                name="answer"
                id="yes"
                checked
              />
              <label
                class="flex justify-center cursor-pointer border-b italic py-2 px-4 hover:bg-gray-50 text-[#EBBA4D] focus:outline-none peer-checked:border-b peer-checked:border-[#EBBA4D] transition-all duration-500 ease-in-out"
                for="yes"
              >History</label
              >

              <div
                class="max-h-[700px] overflow-y-auto w-full absolute left-0 p-6 border-t mt-2 border-gray-300 mx-auto transition-all duration-500 ease-in-out translate-x-40 opacity-0 invisible peer-checked:opacity-100 peer-checked:visible peer-checked:translate-x-1"
              >
                <div class="border-b py-2 flex justify-between">
                  <div>
                      <span class="text-xs italic">
                        November 21, 2023, 10:00 AM
                      </span>
                  </div>
                  <div class="flex justify-between flex-col">
                    <span class="text-xs italic"> Facial </span>
                    <span class="text-xs italic text-gray-500">
                        With Ella
                      </span>
                  </div>
                  <div class="flex justify-between flex-col">
                    <a class="text-xs italic">
                      <span class="text-[#EBBA4D] underline">Reschedule</span>
                    </a>
                    <a class="text-xs italic">
                      <span class="text-[#EBBA4D] underline">Cancel</span>
                    </a>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

{{/client}}
