{{#>admin}}
       <div
      id='main-content'
      class='h-full p-10 w-full bg-gray-50 relative overflow-y-auto lg:ml-64'
    >
      <form method='POST' action='/admin/user/{{viewData.admin.adminID}}/update'>
        <div
          class='p-4 border-t-2 border-indigo-400 rounded-lg bg-gray-100/5'
        >
          <div class='md:mx-0'>
            <div class='flex justify-between w-full'>
              <div class='inline-flex items-center space-x-4'>
                <h1 class='text-gray-600'>Edit Admin User</h1>
              </div>
            </div>
          </div>
        </div>
        <div class='space-y-6 bg-white'>
          <div
            class='items-center w-full p-4 space-y-4 text-gray-500 md:space-y-0'
          >
            <div class='max-w-sm mx-auto space-y-5'>
              <div>
                <div class='relative'>
                  <input
                    type='text'
                    id='firstName'
                    class='rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-[#EBBA4D] focus:border-transparent'
                    placeholder='First name'
                    name='firstName'
                    value='{{viewData.admin.firstName}}'
                  />
                </div>
              </div>
              <div>
                <div class='relative'>
                  <input
                    type='text'
                    id='lastName'
                    class='rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-[#EBBA4D] focus:border-transparent'
                    placeholder='Last name'
                    name='lastName'
                    value='{{viewData.admin.lastName}}'
                  />
                </div>
              </div>
              <div>
                <div class='relative'>
                  <input
                    type='date'
                    id='dateOfBirth'
                    class='rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-[#EBBA4D] focus:border-transparent'
                    placeholder='Date of birth'
                    name='dateOfBirth'
                    value='{{viewData.admin.dateOfBirth}}'
                  />
                </div>
              </div>
              <div class='relative'>
                <select
                  id='gender'
                  name='gender'
                  class='rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-[#EBBA4D] focus:border-transparent'
                >
                  <option value='' disabled selected>Choose Gender</option>
                  <option value='male' label='Male'></option>
                  <option value='female' label='Female'></option>
                  value='{{viewData.admin.gender}}'
                </select>
              </div>
              <div>
                <div class="relative">
                  <input
                    type="text"
                    id='email'
                    class="rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-[#EBBA4D] focus:border-transparent"
                    placeholder="Email"
                    name='email'
                    value='{{viewData.admin.email}}'
                  />
                </div>
              </div>
              <div>
                <div class='relative'>
                  <input
                    type='text'
                    id='phone'
                    class='rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-[#EBBA4D] focus:border-transparent'
                    placeholder='Phone Number'
                    name='phone'
                    value='{{viewData.admin.phone}}'
                  />
                </div>
              </div>
              <div>
                <div class='relative'>
                  <input
                    type='text'
                    id='address'
                    class='rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-[#EBBA4D] focus:border-transparent'
                    placeholder='Address'
                    name='address'
                    value='{{viewData.admin.address}}'
                  />
                </div>
              </div>
            </div>
          </div>
          <hr />
          <div
            class='w-full flex gap-2 px-4 pb-4 ml-auto text-gray-500 md:w-1/3'
          >
            <button
              type='submit'
              class='py-2 px-4 bg-blue-600 hover:bg-blue-700 focus:ring-blue-500 focus:ring-offset-blue-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 rounded-lg'
            >
              Save
            </button>
          </div>
        </div>
      </form>
    </div>
{{/admin}}




